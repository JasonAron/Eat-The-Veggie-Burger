<h2 class="center-align">Eat The Veggie Burger</h2>
<div class="section" id="sect">
  <div class="container">
    <div class="row">
      <div class="col s12 center-align">
        <h4>ADD A BURGER!</h4>
        <form class="create-form">
          <div class="form-group">
            <label for="ca">Veggie Burger:</label>
            <input type="text" id="ca" name="name">
          </div>
          <button type="submit" class="waves-effect waves-light btn">ADD BURGER</button>
        </form>
      </div> 
    </div>

    <div class="row">
      <div class="col s6 left-align">
        <h4>DEVOUR THE BURGER!</h4>
         {{#each burgers}}
            {{#unless devoured}}
              {{> burgers/burger-block devoured=true}}
            {{/unless}}
         {{/each}}
      </div>


      <div class="col s6 right-align">
        <h4>BURGERS DEVOURED</h4>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</div>

